@model StyleShop.Application.Order.OrderDto

@{
    ViewData["Title"] = "Details";
    var isAdmin = User.IsInRole("admin");
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Details @Model.Product.Name order</h3>


    <div class="d-flex align-items-sm-center gap-2">
        @if(isAdmin)
        {
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        }
        <a class="btn btn-dark" asp-action="Index">Back to List</a>
    </div>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            Ordered at
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            Postal code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class = "col-sm-2">
            Product name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class = "col-sm-2">
            Quantity
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductQuantity)
        </dd>
        <dt class="col-sm-2">
            Total price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dt class = "col-sm-2">
            Order status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus.Name)
        </dd>
    </dl>
</div>
